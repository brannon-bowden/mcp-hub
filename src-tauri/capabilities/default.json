{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    {
      "identifier": "fs:default",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$APPDATA/**" },
        { "path": "$APPCONFIG/**" },
        { "path": "$DOCUMENT/**" }
      ]
    },
    "fs:allow-read",
    "fs:allow-write"
  ]
}
